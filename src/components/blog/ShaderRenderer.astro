---
const { path, id } = Astro.props;
---
<script type="text/javascript" src="https://rawgit.com/patriciogonzalezvivo/glslCanvas/master/dist/GlslCanvas.js"></script>
<div class="shader-renderer">
    <canvas
        id={id}
        width="1000"
        height="1000"
        class="glslCanvas shader-renderer__canvas"
        data-fragment-url={path}
    ></canvas>
</div>

<style lang="scss">
.shader-renderer {
    width: 100%;
    margin: 0 auto;
    /*max-width: 500px;*/
    aspect-ratio: 1;

    &__canvas {
        border-radius: 8px;
        width: 100%;
        height: 100%;
    }
}
</style>